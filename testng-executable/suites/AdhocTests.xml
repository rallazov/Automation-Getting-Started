<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Adhoc Tests Suite">
    <test verbose="2" preserve-order="true"
          name="Adhoc Tests">
        <classes>
            <class name="org.automation.example.tests.AdhocTests">
                <methods>
                    <include name="testIntAdd"/>
                    <include name="testFloatAdd"/>
                </methods>
            </class>
        </classes>
    </test>
    <listeners>
        <listener class-name="org.automation.example.listeners.TestLogger"></listener>
    </listeners>
</suite>